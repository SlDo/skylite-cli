    "standard-version": "^9.1.0",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "bin": {
    "skylite": "lib/index.js"
  },
  "scripts": {
    "release": "standard-version",
